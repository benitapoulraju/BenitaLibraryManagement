@{
    ViewData["Title"] = "Home Page";
     var errorMessage = TempData["ErrorMessage"];
       var successMessage = TempData["SuccessMessage"];
}
@if (errorMessage != null)
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

@if (successMessage != null)
{
    <div class="alert alert-success" style="color: red;">
        @successMessage
    </div>
}

<h1>Benita's Library Management </h1>

<button id="borrowButton" class="btn btn-primary">Borrow</button>
<button id="returnButton" class="btn btn-secondary">Return</button>

<script>
    document.getElementById('borrowButton').onclick = function () {
        var userId = prompt("Please enter User ID:");
        if (userId) {
            window.location.href = '/Books/List?userId=' + userId;
        }
        else 
        {
            alert("User ID is required.");
        }
    };

    document.getElementById('returnButton').onclick = function () {
        var userId = prompt("Please enter User ID:");
        if (userId) {
            var bookId = prompt("Please enter Book ID:");
            if (bookId) {
                window.location.href = '/Books/Return/' + bookId + '/' + userId;
            } else {
                alert("Book ID is required.");
            }
        } else {
            alert("User ID is required.");
        }
    };
    
</script>
 